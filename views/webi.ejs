<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>userlist</title>
    <link rel="stylesheet" href="/dark.css" id="css_mode" />
    <script src="/library/index.js"></script>
    <link
      rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/styles/default.min.css"
    />
    <link
      rel="stylesheet"
      href="https://highlightjs.org/static/demo/styles/base16/atelier-estuary.css"
    />
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/highlight.min.js"></script>
  </head>
  <body onload="load()" style="width: 100vw; height: 100vh; position: absolute">
    <%- include('header.ejs', {user: u}) %>
    <div class="content"><h1>Waiting for Review:</h1>
      <% bots.forEach(element => { %>
      <div class="bot" onclick="gotoBot('<%= element.id %>')">
        <b style="color: var(--textcol)"
          ><a href="/bot/<%= element.id%>" style="color: var(--textcol)"
            ><img src="<%= element.avatar %>" class="big-avatar" /><%=
            element.name %></a
          ></b
        >
      </div>
      <% }); %>
    </div>
    <!-- REMOVE!!!!!! -->
    <script>
      function gotoBot(id) {
        location.href = location.origin + "/bot/" + id;
      }
    </script>
    <style>
      .content {
        margin: 30px;
      }
      .bot {
        cursor: pointer;
        margin: 5px;
        border: 1px solid orangered;
        border-radius: 12px;
        padding: 4px;
        margin-left: 30px;
        margin-right: 30px;
        transition: transform 0.1s;
        transform: scale(1);
      }

      .bot:hover {
        transform: scale(1.01);
        padding-top: 10px;
        padding-bottom: 10px;
      }

      .bot > * {
        margin: 0;
        padding: 0;
        font-size: medium;
        margin-left: 20px;
      }
      .bot_t {
        display: inline-table;
      }
      .bot_t > * {
        margin: 0;
        padding: 0;
      }
      .bot_t > .votes {
        right: 0;
        bottom: 2px;
        position: absolute;
        padding-right: 10px;
      }

      .bot_t > * {
        display: inline;
      }

      .hl1 {
        white-space: pre;
      }
    </style>
    <%- include('footer.ejs', {user: u}) %>
  </body>
</html>
