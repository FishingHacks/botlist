<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Botlist</title>
    <link rel="stylesheet" href="dark.css" id="css_mode">
    <script src="/library/index.js"></script>
    <style>
        .bot {
            cursor: pointer;
            margin: 5px;
            border: 1px solid orangered;
            border-radius: 12px;
            padding: 4px;
            margin-left: 30px;
            margin-right: 30px;
            transition: transform .1s;
            transform: scale(1);
        }

        .bot:hover {
            transform: scale(1.01);
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .bot>* {
            margin: 0;
            padding: 0;
            font-size: medium;
            margin-left: 20px;
        }
        .bot_t {
            display: inline-table;
            
        }
        .bot_t>* {
            margin: 0;
            padding: 0;
        }
        .bot_t > .votes {
            right: 0;
            bottom: 2px;
            position: absolute;
            padding-right: 10px;
        }

        .bot_t>* {
            display: inline;
        }
    </style>
    <script>
        function gotoBot(id) {
            location.href=location.origin+"/bot/"+id;
        }
    </script>
</head>
<body onload="load()" style="width: 100vw; height: 100vh; position: absolute;">
    <%- include('header.ejs', {user: u}) %>
    <% bots.forEach(element => { if(element.isReviewed) { %>
        <div class="bot" onclick="gotoBot('<%= element.id %>')">
        <b style="color: var(--textcol);"><a href="/bot/<%= element.id%>" style="color: var(--textcol)"><img src="<%= element.avatar %>" class="big-avatar"/><%= element.name %></a></b>
        <p style="font-size: small;"><%= element.headline %></p>
        <div class="bot_t">
        <p>Tags: <%= element.tags.join(", ") %></p>
        <p class="votes">Votes: <%= element.votes %></p>
    </div></div>
   <% }}); %>
    <%- include('footer.ejs', {user: u}) %>
</body>
</html>